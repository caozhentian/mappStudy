@import "../../pages/common/lib/weui.wxss";

.radio {
  margin-right: 20rpx;
}

.price {
  margin-top: 30rpx;
  margin-bottom: 25rpx;
  position: relative;
  display: inline-block;
  font-size: 36rpx;
  line-height: 1;
}

.price:before {
  content: "Â¥";
  position: absolute;
  font-size: 20px;
  top: 8rpx;
  left: -40rpx;
}

.page-section-title {
  font-size: 15px;
  font-weight: bold;
  color: black;
}

.container_upload {
  display: flex;
  flex-direction: column;
  border: lightgrey;
  border-style: solid;
  border-width: 1px;
  margin: 10px;
}

.image_upload {
  width: 90%;
  height: 150px;
  margin-top: 10px;
  align-self: center;
}

.weui-input {
  border: gray;
  border-style: solid;
  border-width: 1px;
  margin: 10px;
  padding-left: 10px;
}

.page-pay-foot {
  margin: 10rpx 20rpx 10rpx 20rpx;
  text-align: center;
  color: red;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}

.acount {
  text-align: center;
  display: flex;
  flex: 5;
  align-items: center;
  justify-content: flex-start;
}

.btn {
  display: flex;
  flex: 2;
  align-items: flex-end;
  justify-content: center;
}

.smscode {
  display: flex;
  direction: row;
  justify-content: space-between;
  margin-right: 10px;
  padding: 0;
  margin-top: 0;
  margin-bottom: 0;
}

.weui-input_smscode {
  border: gray;
  border-style: solid;
  border-width: 1px;
  margin: 10px;
  padding-left: 10px;
  flex: 1;
  height: 28px;
}

.sms-code-countdown {
  margin-right: 2px;
  display: flex;
  align-items: center;
  color: red;
}
