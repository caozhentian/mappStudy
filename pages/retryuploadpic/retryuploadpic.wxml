<view class="container">

  <view style='margin:0px 0px 10px 0px;'>
  <i-card title="订单信息" extra="">
    <view slot="content">
      <view class="order-item-class">
        <view>订单号:</view>
        <view> {{orderId}}</view>
      </view>
      <view class="order-item-class">
        <view>手机号:</view>
        <view> {{telHide}}</view>
      </view>
      <view class="order-item-class">
        <view>身份证号码：:</view>
        <view> {{idcardHide}}</view>
      </view>
    </view>
  </i-card>
  </view>
  <i-card title="照片信息" extra="至少上传一张">
    <view slot="content">
      <view class='container_upload'>
        <image class='image_upload' src='{{urlIdCard}}'></image>
        <button type='primary' data-img-type="1" size='mini' bindtap='uploadIdcard'>上传身份证正面照片</button>
      </view>
      <!--居住证 -->
      <view class='container_upload'>
        <image class='image_upload' src='{{urlResidentfrtgh}}'></image>
        <button type='primary' data-img-type="2" size='mini' bindtap='uploadResidentfrtgh'>上传居住证正面照片</button>
      </view>
    </view>
  </i-card>

  <!--底部操作栏 -->
  <view class='page-pay-foot'>
    <button class='btn' bindtap='goUploadPic' type='primary' size='mini'>重新上传</button>
  </view>

</view>