<view class="container">

  <view class="lll" wx:for="{{list}}" wx:for-item="item" bindtap="bindViewTap" data-title="{{item.title}}">
    <image style=" width: 50px;height: 50px;margin: 20rpx;" src="{{item.firstImg}}"></image>
    <view class="eee">
      <view style="margin:5px;font-size:14px"> 标题:{{item.title}}</view>
      <view style="margin:5px;color:red;font-size:12px"> 来源:{{item.source}}</view>
    </view>
  </view>
  <view class="tips1">
    <view wx:if="{{loadMoreing}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
      <icon type="waiting" size='20' />
      <text style="margin:15px;color:red;font-size:14px">>玩命的加载中...</text>
    </view>
    <!-- <view wx:else>
      <text>没有更多内容了</text>
    </view> -->
  </view>

</view>