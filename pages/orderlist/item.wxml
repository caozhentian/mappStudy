<!--待支付-->
<template name="0">
  <view style='margin:0px 0px 10px 0px;' class='i-card-margin-class'>
    <i-card i-class="row-class" title="名称:" extra="{{name}}" thumb="{{image}}">
      <view slot="content">
        <view class="order-item-class">
          <view>订单编号: </view>
          <view>{{order_id}}</view>
        </view>
        <view class="order-item-class">
          <view>手机号:</view>
          <view> {{mobile}}</view>
        </view>
        <view class="order-item-class">
          <view>金额:</view>
          <view> {{total_amount}}元</view>
        </view>
      </view>
      <view slot="footer">
        <i-row i-class="row-class">
          <i-col bindtap="toPay" data-orderid="{{order_id}}" data-orderprice="{{total_amount}}" bindtap="toPay" span="6" offset="11" i-class="col-class">去支付</i-col>
          <i-col bindtap="showDlg" data-orderid="{{order_id}}" span="6" offset="1" i-class="col-class light">取消订单</i-col>
        </i-row>
      </view>
    </i-card>
  </view>
</template>
