<template name="1">
  <view style='margin:0px 0px 10px 0px;' class='i-card-margin-class'>
    <i-card title="名称:" extra="{{name}}" thumb="{{image}}">
      <view wx:if="{{8 > 5}}">
        <view slot="footer">
          申
        </view>
      </view>
      <view wx:else>
        <view slot="footer">
          <i-row i-class="row-class">
            <i-col bindtap="toRetryUpload" data-orderid="12233" span="6" offset="18" i-class="col-class">重新上传</i-col>
          </i-row>
        </view>
      </view>
    </i-card>
  </view>
</template>
