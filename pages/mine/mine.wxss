.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.container_sub{
  min-height: 100%;
  flex: 1
}
.userinfo {
	display: flex;
	flex-direction: column;
	padding: 30rpx 0;
	align-items: center;
	background: #e98f8e;
  width: 750rpx;
}

.userinfo-avatar {
	overflow:hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #FFF;
}


.version {
  width:100%;
  height: 40rpx;
	line-height: 40rpx;
	font-size: 11px;
	text-align: center;  
  padding: 40rpx;
}

.my-item{
    width: 100%;
    background: gainsboro no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0; 
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 100rpx;
}

.about{
    width: 100%;
    background: gainsboro no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0; 
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 100rpx;
}

.page-login-foot {
  margin: 10rpx 20rpx 10rpx 20rpx;
  text-align: center;
  color: red;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}