<import src="header.wxml" />
<view class="container">
  <scroll-view class="page-body">
    <template is="header" data="{{...header}}" />
    <!-- 列表的主题部分-->
    <view wx:for="{{info.list}}" wx:for-item="item">
      <view wx:if="{{index %2 == 0}}">
        <i-row i-class="item-row-odd">
          <i-col span="4">{{index+1}}</i-col>
          <i-col span="4">{{item.region}}</i-col>
          <i-col span="4">{{item.type}}</i-col>
          <i-col span="4">{{item.name}}</i-col>
          <i-col span="4">{{item.price}}元/次</i-col>
          <i-col span="4">{{item.limit_count}}</i-col>
        </i-row>
      </view>
      <view wx:else>
        <i-row i-class="item-row-even">
          <i-col span="4">{{index+1}}</i-col>
          <i-col span="4">{{item.region}}</i-col>
          <i-col span="4">{{item.type}}</i-col>
          <i-col span="4">{{item.name}}</i-col>
          <i-col span="4">{{item.price}}元/次</i-col>
          <i-col span="4">{{item.limit_count}}</i-col>
        </i-row>
      </view>
    </view>
  </scroll-view>
</view>