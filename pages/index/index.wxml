<!--index.wxml-->
<view class="container">
  <!-- 轮播图 -->
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" style="width: 100%; height: 150px;" mode="scaleToFil" />
      </swiper-item>
    </block>
  </swiper>
  <!--快捷菜单-->
  <i-grid hidden='{{isGuest || (platformUser.userType != USER_TYPE_COMM)}}'>
    <i-grid-item bindtap="gotoMineComment">
      <i-grid-icon>
        <image src="../../image/icon_ticket_HL.png" />
      </i-grid-icon>
      <i-grid-label>我的评论</i-grid-label>
    </i-grid-item>
    <i-grid-item>
      <i-grid-icon>
        <image src="../../image/icon_ticket_HL.png" />
      </i-grid-icon>
      <i-grid-label>我的发布</i-grid-label>
    </i-grid-item>
    <i-grid-item bindtap="gotoMineTrace">
      <i-grid-icon>
        <image src="../../image/icon_ticket_HL.png" />
      </i-grid-icon>
      <i-grid-label>我的足迹</i-grid-label>
    </i-grid-item>
    <i-grid-item bindtap="gotoMineTicketFolder">
      <i-grid-icon>
        <image src="../../image/icon_ticket_HL.png" />
      </i-grid-icon>
      <i-grid-label>我的票夹</i-grid-label>
    </i-grid-item>
  </i-grid>
  <!-- 公告 -->
  <view class='notice-container' bindtap="select_notice">
    <text class='notice_head'>公告</text>
    <image class='notice_image' mode='scaleToFill' src='../../image/icon_home_notice.png'></image>
    <text class='notice'>{{notice}}</text>
  </view>
  <!-- 分割线 -->
  <view class="divLine"></view>
  <!--功能区的瀑布流布局-->
  <view class="flow-container">
    <view class='flow-container-first-part-left' bindtap="select_ticket">
      <view class='.flow-container-first-part-top'>
        <image class='.image' src="../../image/icon_home_ticket.png"></image>
        <text class=".name">年票</text>
      </view>
      <view class='.flow-container-first-part-bottom'>
        <image class='.image' src="../../image/icon_home_stay.png"></image>
        <text class=".name">住宿</text>
      </view>
    </view>
    <view class='flow-container-first-part-right'>
      <view class='.flow-container-first-part-bottom'>
        <image class='.image' src="../../image/icon_home_comm_ticket.png"></image>
        <text class=".name">普票</text>
      </view>
      <view class='.flow-container-first-part-bottom'>
        <image class='.image' src="../../image/icon_home_play.png"></image>
        <text class=".name">娱乐</text>
      </view>
      <view class='.flow-container-first-part-bottom' bindtap="select_ticket_question">
        <image class='.image' src="../../image/icon_home_ticket_question.png"></image>
        <text class=".name">年票问答</text>
      </view>
    </view>
  </view>
 <i-modal visible="{{ visible }}" bind:ok="handleOK" bind:cancel="handleCancel">
    <view>请先登录</view>
</i-modal>
</view>