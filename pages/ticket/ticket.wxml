<view class="container">
  <view class='ticket_container' bindtap='onTicketAgree'>
    <text class='ticket_name'>{{name}}</text>
    <!-- 背景图 -->
    <image class='ticket_bg' mode="scaleToFil" src="{{url}}"> </image>
    <!-- 价格 -->
    <text class='ticket_price'>价格：{{price}}元</text>
    <!-- <text class='ticket_simple_name'>{{simpleName}}</text> -->
  </view>
  <view class='view_operate'>
    <button bindtap='gotoPay' type = 'primary' size='mini' class='btn_go_to_pay'>购买</button>
    <button bindtap='gotoSpots'   type = 'primary'  size='mini' class='btn_go_to_spot'>列表</button>
  </view>
</view>