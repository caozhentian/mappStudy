<view class="container">
  <view class="page-body">

    <view class="page-section" hidden='true'>
      <view class="page-section-title">身份证号：</view>
      <input class="weui-input_smscode" value='{{idcard}}' bindinput="bindIdcardKeyInput" type="idcard" placeholder="请输入身份证" maxlength="18" confirm-type='next' />
    </view>

    <view class="page-section">
      <view class="page-section-title">手机号：</view>
      <input class="weui-input_smscode" value='{{tel}}' bindinput="bindTelKeyInput" type="number" placeholder="请输入手机号" maxlength="11" confirm-type='done' />
    </view>

    <view class="page-section">
      <view class="page-section-title">验证码：</view>
      <view class='smscode'>
        <input class="weui-input_smscode" value='{{smscode}}' bindinput="bindSmsCodeKeyInput" type="number" placeholder="请输入验证码" maxlength="11" confirm-type='done' maxlength="6" />
        <button   bindtap='getSmsCode' hidden='{{hidenSmscode}}'  type='primary' size='mini'>获取验证码</button>
        <view class = 'sms-code-countdown' hidden='{{hideCountDown}}'>
          <text>{{sss}} 秒</text>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="page-section-title">密码：</view>
      <input password class="weui-input_smscode" value='{{password}}' bindinput='bindPasswordKeyInput' placeholder="请输入密码" maxlength='18' confirm-type='next' />
    </view>

    <view class="page-section">
      <view class="page-section-title">确认密码：</view>
      <input password class="weui-input_smscode" value='{{confirmPassword}}' bindinput='bindConfirmPasswordKeyInput' placeholder="请输入确认密码" maxlength="18" confirm-type='done' />
    </view>

    <!--底部操作栏 -->
    <view class='page-pay-foot'>
      <button class='btn' bindtap='register' type='primary'>重置密码</button>
    </view>
  </view>
</view>