<template name="item">
  <view class='ticket_container'>
    <text class='ticket_name'>{{name}}</text>
    <!-- 背景图 -->
    <image class='ticket_bg' mode="scaleToFil" src="{{image}}"> </image>
    <!-- 价格 -->
    <text class='ticket_price'>价格：{{price}}元</text>
    <view class='view_operate'>
      <button data-ticket-id="{{id}}" bindtap='checkticket' type='primary' size='mini' class='btn_go_to_spot'>二维码验票</button>
    </view>
  </view>
  <i-panel>
    <i-cell title="身份证号码" value="{{hideidcard}}"></i-cell>
  </i-panel>
  <i-panel>
    <i-cell title="手机号" value="{{hideTel}}"></i-cell>
  </i-panel>
  <i-panel>
    <i-cell title="年票有效期" value="{{effectiveDate}}"></i-cell>
  </i-panel>
  <i-panel>
    <i-cell title="年票状态" value="{{status}}"></i-cell>
  </i-panel>
  <i-panel>
    <i-cell title="验票记录" is-link url="/pages/mycheckrecord/mycheckrecord?id={{ticketId}}"></i-cell>
  </i-panel>
  <i-panel>
    <i-cell title="当前景区名称" value="{{spotName}}"></i-cell>
  </i-panel>
  <i-panel>
    <i-cell title="当前验票状态" value="{{curCheckStatus}}"></i-cell>
  </i-panel>
  <i-panel>
    <i-cell title="当前景区游玩次数" value="{{playTimes}}次"></i-cell>
  </i-panel>
  <i-button bind:click="gotoSpot" type="primary" data-spot-id = "7" shape="circle" size="small">当前景区</i-button>
</template>